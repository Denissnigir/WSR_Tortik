<Page x:Class="WSR_Tort.Pages.DirectorMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WSR_Tort.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DirectorMenu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Button Width="350" Height="80" Style="{StaticResource MainButton}" Content="Учёт инструментов" FontSize="18" Click="ToEquipmentList"/>
        <Button Width="350" Height="80" Style="{StaticResource MainButton}" FontSize="18" Grid.Row="1" Click="ToIngridientList">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Учёт ингредиентов и украшений для тортов"/>
        </Button>
    </Grid>
</Page>
